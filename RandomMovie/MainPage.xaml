<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RandomMovie.MainPage">

    <ScrollView>
        <VerticalStackLayout
            VerticalOptions="StartAndExpand">
            <SearchBar TextChanged="SearchBar_TextChanged" />
            <CarouselView Loop="False" MaximumHeightRequest="550" x:Name="Carousel" PeekAreaInsets="60">
                <CarouselView.ItemsLayout>
                    <LinearItemsLayout Orientation="Horizontal" />
                </CarouselView.ItemsLayout>
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <VerticalStackLayout>
                            <VerticalStackLayout.GestureRecognizers>
                                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" NumberOfTapsRequired="1" />
                            </VerticalStackLayout.GestureRecognizers>
                            <Image VerticalOptions="Start" MaximumHeightRequest="345">
                                <Image.Source>
                                    <UriImageSource Uri="{Binding PosterWebsiteLink}" CacheValidity="31:0:0:0" />
                                </Image.Source>
                            </Image>
                            <Label MaximumWidthRequest="230" HorizontalOptions="Center" LineBreakMode="WordWrap" FontSize="Medium" Text="{Binding Name}" />
                        </VerticalStackLayout>
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>
            <Button Margin="10" VerticalOptions="Start" x:Name="RandomMovie" Text="Random Movie" Clicked="RandomMovie_Clicked" />
            <Button Margin="10" VerticalOptions="Start" x:Name="LetterBoxd" Text="LetterBoxd" Clicked="LetterBoxd_Clicked" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
