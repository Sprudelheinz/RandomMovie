<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="RandomMovie.Controls.PopUp.ChooseListPopUp"
             Color="Transparent">
    <VerticalStackLayout BackgroundColor="Transparent">
        <Frame WidthRequest="400" HeightRequest="500">
            <ListView ItemsSource="{ Binding List }" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" ItemSelected="ListView_ItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Label VerticalOptions="Center" Text="{Binding Key}" TextColor="Gray" FontAttributes="Bold" />
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Frame>
    </VerticalStackLayout>
</toolkit:Popup>