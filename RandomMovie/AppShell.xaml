<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RandomMovie.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RandomMovie"
    Shell.FlyoutBehavior="Flyout">
    
    <Shell.FlyoutHeader>
        <Label HorizontalOptions="Center" Text="Settings" FontSize="Large" />
    </Shell.FlyoutHeader>
    <FlyoutItem Title="Home" FlyoutDisplayOptions="AsSingleItem">
        <ShellContent
         x:Name="ShellContent"
         Title="Random Movie"
         ContentTemplate="{DataTemplate local:MainPage}"
         Route="MainPage" />
    </FlyoutItem>
    
    <MenuItem x:Name="MenuDelete" Text="Reset Watchlist" Clicked="MenuItem_Clicked" />
    <MenuItem x:Name="ResetPosterCache" Text="Reset Poster Cache" Clicked="ResetPosterCache_Clicked" />
</Shell>
